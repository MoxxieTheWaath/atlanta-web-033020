<h1>Create new book</h1>

<%= form_with model: @book do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.text_field :desc %>
  <%= f.text_field :author_id %>

  <%= f.submit %>
<% end %>

